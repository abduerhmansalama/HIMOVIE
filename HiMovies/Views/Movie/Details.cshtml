@model Movie;

@{ 
    ViewData["title"] = Model.Title;
}
<div class="mt-60-px row align-content-xl-end">
    <div class="col-md-3">
        <img  src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="poster  @Model.Title" />
    </div>
    <div class="col-md-7">
       
        <div class="row  d-flex justify-content-between lh-4">
            <h3 class="col-md-6">
                @Model.Title

            </h3>
            <span  class="col-md-6" style="text-align:right">
                <i class="bi bi-star-fill text-warning "></i>
                <span class="text-muted">@Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <span class="text-muted mr-4">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted mr-4">
            <i class="bi bi-film"></i>
            @Model.Genre.name
        </span>
        <p>@Model.Storeline</p>
    </div>
</div>